{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,

    "declaration": true,
    "declarationMap": true
  },
  "include": ["*.ts", "src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}